<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        android:background="@drawable/rounded_edge"
        android:color="#434343" >

        <EditText
            android:id="@+id/modelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="12"
            android:textAlignment="center"
            android:inputType="text"
            android:text="Model Type"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Number of Models-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/stat_input_border" >

                <TextView
                    android:id="@+id/numberOfModelsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Models"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:background="#FFFFFF"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/numberOfModels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="Models"
                    android:textAlignment="center"
                    android:background="@color/white"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!--Wpn Shots-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/stat_input_border" >

                <TextView
                    android:id="@+id/wpnShotsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Shots Per"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:background="@color/white"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/wpnShots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="Shots Per"
                    android:textAlignment="center"
                    android:background="@color/white"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!--Ballistic Skill-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/stat_input_border" >

                <TextView
                    android:id="@+id/ballisticSkillLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Ballistic Skill"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:background="@color/white"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/ballisticSkill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="Ballistic Skill"
                    android:textAlignment="center"
                    android:background="@color/white"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp" >

            <!--Wpn Strength-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/stat_input_border" >

                <TextView
                    android:id="@+id/wpnStrengthLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Wpn Str"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:background="@color/white"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/wpnStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:text="Wpn Str"
                    android:background="@color/white"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!--Wpn Armor Pen-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/stat_input_border" >

                <TextView
                    android:id="@+id/wpnArmorPenLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Wpn AP"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:background="@color/white"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/wpnArmorPen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:text="Wpn AP"
                    android:background="@color/white"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!--Wpn Dmg-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/stat_input_border" >

                <TextView
                    android:id="@+id/wpnDmgLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Wpn Dmg"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:background="@color/white"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/wpnDmg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:text="Wpn Dmg"
                    android:background="@color/white"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnDeleteModelUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:background="@drawable/delete_button" />

            <Button
                android:id="@+id/btnDuplicateModelUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duplicate"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/orange_button" />

            <Button
                android:id="@+id/btnOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Options"
                android:layout_marginLeft="5dp"
                android:background="@drawable/orange_button" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>